{
  "name": "learn-rails",
  "scripts": {
    "postdeploy": " npm install && bundle exec rake webpack:compile && bundle exec rake db:migrate && bundle exec rake assets:precompile"
  },
  "env": {
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs",
      "url": "heroku/ruby"
    }
  ]
}
